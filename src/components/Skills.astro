---
const skillGroups = [
  {
    title: "Product & Strategy",
    skills: ["Product Roadmapping", "Go-to-Market", "Market Research", "Customer Discovery", "Pricing Strategy", "Competitive Analysis", "Business Analysis"]
  },
  {
    title: "Technical",
    skills: ["TypeScript / JavaScript", "React", "Node.js", "PostgreSQL", "Python", "REST APIs", "Git", "HTML/CSS"]
  },
  {
    title: "Tools & Platforms",
    skills: ["Jira", "Figma", "Power BI", "Tableau", "SolidWorks", "Vercel", "Docker", "AI/LLM Tools"]
  },
  {
    title: "Leadership",
    skills: ["Cross-functional Teams", "Agile / Scrum", "StageGate", "4DX", "Stakeholder Management", "Mentoring", "Servant Leadership"]
  }
];
---

<section id="skills" class="py-24 px-6">
  <div class="max-w-4xl mx-auto">
    <div data-animate>
      <p class="text-accent text-sm font-medium tracking-widest uppercase mb-3">Skills</p>
      <h2 class="text-3xl md:text-4xl font-bold mb-12">
        What I work with<span class="text-accent">.</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {skillGroups.map((group) => (
        <div data-animate class="bg-bg-card border border-border rounded-xl p-6">
          <h3 class="text-sm font-semibold text-accent uppercase tracking-wider mb-4">{group.title}</h3>
          <div class="flex flex-wrap gap-2">
            {group.skills.map((skill) => (
              <span class="text-sm px-3 py-1.5 rounded-lg bg-bg-elevated text-text-secondary border border-border hover:border-accent/30 hover:text-text-primary transition-colors">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
