---

<section id="experience" class="py-28 px-6">
  <div class="max-w-5xl mx-auto">
    <!-- Section label -->
    <div class="section-label" data-animate>
      <span class="section-number">02</span>
      <span class="section-line"></span>
      <span class="section-label-text">Experience</span>
    </div>

    <h2 class="text-3xl md:text-4xl font-bold mt-4 mb-16" data-animate data-delay="100">
      Where I've been<span class="gradient-text">.</span>
    </h2>

    <!-- Timeline -->
    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-[5px] md:left-[5px] top-0 bottom-0 w-px bg-gradient-to-b from-accent via-border to-transparent"></div>

      <div class="space-y-12">
        {experiences.map((exp, i) => (
          <div class="relative pl-10 md:pl-12" data-animate data-delay={String(i * 150)}>
            <!-- Timeline dot -->
            <div class="absolute left-0 top-2">
              <div class="timeline-dot"></div>
            </div>

            <!-- Card -->
            <div class="bg-bg-card border border-border rounded-xl p-6 md:p-8 card-hover timeline-card">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-4">
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 rounded-lg bg-accent-subtle flex items-center justify-center shrink-0 mt-0.5">
                    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={exp.icon} />
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-text-primary">{exp.company}</h3>
                    <p class="text-accent font-medium text-sm">{exp.role}</p>
                    <p class="text-text-muted text-xs mt-0.5">{exp.location}</p>
                  </div>
                </div>
                <div class="flex items-center gap-3 md:flex-col md:items-end">
                  <span class="text-text-muted text-sm font-mono shrink-0">{exp.period}</span>
                  <span class="text-xs px-2.5 py-1 rounded-full bg-accent-subtle text-accent border border-accent/20">
                    {exp.badge}
                  </span>
                </div>
              </div>

              <p class="text-text-secondary leading-relaxed mb-5">{exp.description}</p>

              <ul class="space-y-2 mb-5">
                {exp.highlights.map((h) => (
                  <li class="flex items-start gap-3 text-text-secondary text-sm">
                    <span class="text-accent mt-0.5 shrink-0">▹</span>
                    <span>{h}</span>
                  </li>
                ))}
              </ul>

              <!-- Products -->
              <div class="bg-bg-elevated rounded-lg px-4 py-3 mb-5">
                <p class="text-text-muted text-xs uppercase tracking-wider font-mono mb-1">Products</p>
                <p class="text-text-secondary text-sm">{exp.products}</p>
              </div>

              <div class="flex flex-wrap gap-2">
                {exp.tags.map((tag) => (
                  <span class="text-xs px-2.5 py-1 rounded-md bg-bg-elevated text-text-muted border border-border font-mono">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
